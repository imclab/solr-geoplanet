<?xml version="1.0" encoding="UTF-8" ?>

<schema name="example" version="1.5">

 <fields>

   <field name="_version_" type="tlong" indexed="true" stored="true"/>

        <!-- single value WOE ID fields -->
	<field name="woeid" type="woeid" indexed="true" stored="true"  multiValued="false" required="true" />
	<field name="woeid_parent" type="woeid" indexed="true" stored="true" multiValued="false" required="false" />

	<!--
	<field name="woeid_superseded_by" type="woeid" indexed="true" stored="true" multiValued="false" required="false" />
	-->

        <!-- multivalue value WOE ID fields -->
	<!-- woeid_hierarchy -->
	<!-- woeid_adjacent -->
	<!-- woeid_supersedes -->
	<!-- woeid_superseded_by -->

	<dynamicField name="woeid_*" type="woeid" indexed="true" stored="true" multiValued="true" required="false" />

	<field name="placetype" type="placetype" indexed="true" stored="true" multiValued="false" required="false" />

	<!-- dates -->

	<field name="date_indexed" type="tdate" indexed="false" stored="true" multiValued="false" required="false" default="NOW" />

	<!-- place names -->

	<!-- these two fields are copyfield destinations -->

	<field name="names" type="placename" indexed="true" stored="false" multiValued="true" required="false" termVectors="true" />
	<field name="variants" type="placename" indexed="true" stored="false" multiValued="true" required="false" termVectors="true" />

	<field name="name" type="placename" indexed="true" stored="true" multiValued="false" required="false" termVectors="true" />
	<copyField source="name" dest="names" />

	<dynamicField name="alias_*" type="placename" indexed="false" stored="true" multiValued="true" />

	<!--
		N type = preferred local name
		P type = preferred ENG name
		Q type = a preferred name (in other languages)
		V type is a valid variant name that is unpreferred
		S is a synonym or "version stripped of accent characters"
		A is an abbreviation (aka "NYC")
	-->

	<copyField source="*_V" dest="variants" />
	<copyField source="*_P" dest="names" />
	<copyField source="*_Q" dest="names" />
	<copyField source="*_S" dest="names" />
	<copyField source="*_A" dest="names" />
	<copyField source="*_N" dest="names" />

	<!-- you are here -->

	<field name="lang" type="language" indexed="false" stored="true"  multiValued="false" required="false" />
	<field name="iso" type="iso" indexed="true" stored="true"  multiValued="false" required="false" />

	<!-- data source -->

	<!-- deprecated -->
	<field name="provider" type="provider" indexed="true" stored="true"  multiValued="false" required="false" />

	<!-- the new new: provider_metadata,provider_geometry,etc. -->
	<dynamicField name="provider_*" type="provider" indexed="true" stored="true"  multiValued="true" required="false" />

	<!-- spatial stuff -->

	<field name="centroid" type="location" indexed="true" stored="true"/>
	<field name="sw_corner" type="location" indexed="true" stored="true"/>
	<field name="ne_corner" type="location" indexed="true" stored="true"/>

	<dynamicField name="*_coordinate"  type="coord" indexed="true"  stored="false"/>

        <field name="area" type="area" indexed="true" stored="true" multiValued="false" required="false" />

	<dynamicField name="geometry_*" type="geometry" indexed="false" stored="true" multiValued="false" required="false" />

	<!-- scale_rank, scale_population, etc. -->
	<dynamicField name="scale_*" type="scale" indexed="true" stored="true" multiValued="true" required="false" />

	<!-- concordances! -->
	<dynamicField name="concordance_*" type="string" indexed="true" stored="true" multiValued="true" required="false" />

 </fields>

 <uniqueKey>woeid</uniqueKey>
 
  <types>

        <fieldType name="location" class="solr.LatLonType" subFieldSuffix="_coordinate"/>
        <fieldType name="coord" class="solr.TrieDoubleField" precisionStep="0" omitNorms="true" positionIncrementGap="0" />

        <fieldType name="area" class="solr.TrieDoubleField" precisionStep="0" omitNorms="true" positionIncrementGap="0" />

        <fieldType name="scale" class="solr.TrieLongField" precisionStep="8" omitNorms="true" positionIncrementGap="0" />
        <fieldType name="woeid" class="solr.TrieLongField" precisionStep="8" omitNorms="true" positionIncrementGap="0" />

        <fieldType name="placetype" class="solr.TextField" sortMissingLast="true" omitNorms="true">
	    <analyzer>
		<tokenizer class="solr.KeywordTokenizerFactory"/>
        	<filter class="solr.LowerCaseFilterFactory"/>
	    </analyzer>
	</fieldType>

        <fieldType name="language" class="solr.TextField" sortMissingLast="true" omitNorms="true">
	    <analyzer>
		<tokenizer class="solr.KeywordTokenizerFactory"/>
        	<filter class="solr.LowerCaseFilterFactory"/>
	    </analyzer>
	</fieldType>

        <fieldType name="iso" class="solr.TextField" sortMissingLast="true" omitNorms="true">
	    <analyzer>
		<tokenizer class="solr.KeywordTokenizerFactory"/>
        	<filter class="solr.LowerCaseFilterFactory"/>
	    </analyzer>
	</fieldType>

        <fieldType name="provider" class="solr.TextField" sortMissingLast="true" omitNorms="true">
	    <analyzer>
		<tokenizer class="solr.StandardTokenizerFactory"/>
        	<filter class="solr.LowerCaseFilterFactory"/>
	    </analyzer>
	</fieldType>

        <fieldType name="placename" class="solr.TextField" sortMissingLast="true" omitNorms="false" termVectors="true">
		<analyzer>
			<tokenizer class="solr.StandardTokenizerFactory" />
			<!-- is this really necessary w/ StandardTokenFactory? -->
      			<filter class="solr.WordDelimiterFilterFactory" generateNumberParts="0" generateWordParts="0" catenateAll="1" preserveOriginal="1" />
			<!-- huh?
			woedb: org.apache.solr.common.SolrException:org.apache.solr.common.SolrException: Plugin init failure for [schema.xml] fieldType "placename": Plugin init failure for [schema.xml] analyzer/filter: Error loading class 'solr.ISOLatin1AccentFilterFactory' 
			-->
      			<!-- <filter class="solr.ISOLatin1AccentFilterFactory" /> -->
      			<filter class="solr.LowerCaseFilterFactory" />
		</analyzer>
	</fieldType>

    <!-- just a blob to store a serialized GeoJSON Feature geometry hash in -->
    <fieldType name="geometry" class="solr.StrField" sortMissingLast="true" />

    <fieldType name="string" class="solr.StrField" sortMissingLast="true" />
    <fieldType name="boolean" class="solr.BoolField" sortMissingLast="true"/>

    <fieldType name="tint" class="solr.TrieIntField" precisionStep="8" positionIncrementGap="0"/>
    <fieldType name="tfloat" class="solr.TrieFloatField" precisionStep="8" positionIncrementGap="0"/>
    <fieldType name="tlong" class="solr.TrieLongField" precisionStep="8" positionIncrementGap="0"/>
    <fieldType name="tdouble" class="solr.TrieDoubleField" precisionStep="8" positionIncrementGap="0"/>

    <fieldType name="tdate" class="solr.TrieDateField" precisionStep="6" positionIncrementGap="0"/>

    <fieldType name="random" class="solr.RandomSortField" indexed="true" />

    <fieldType name="text_general" class="solr.TextField" positionIncrementGap="100">
      <analyzer type="index">
        <tokenizer class="solr.StandardTokenizerFactory"/>
        <filter class="solr.StopFilterFactory" ignoreCase="true" words="stopwords.txt" enablePositionIncrements="true" />
        <!-- in this example, we will only use synonyms at query time
        <filter class="solr.SynonymFilterFactory" synonyms="index_synonyms.txt" ignoreCase="true" expand="false"/>
        -->
        <filter class="solr.LowerCaseFilterFactory"/>
      </analyzer>
      <analyzer type="query">
        <tokenizer class="solr.StandardTokenizerFactory"/>
        <filter class="solr.StopFilterFactory" ignoreCase="true" words="stopwords.txt" enablePositionIncrements="true" />
        <filter class="solr.SynonymFilterFactory" synonyms="synonyms.txt" ignoreCase="true" expand="true"/>
        <filter class="solr.LowerCaseFilterFactory"/>
      </analyzer>
    </fieldType>

 </types>
  
</schema>
